@model IEnumerable<MiniProjet_alpha.ViewModels.AdminDashboardViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Taux D'absance par étudiant</h1>
    <div class="container" style="margin-top: 50px;">
              <a asp-action="Index" class="btn btn-primary" >Liste de présence</a> |
                <a asp-action="TauxAdmin" class="btn btn-primary">Taux d'absence par matière</a>
    </div>
    <table class="table table-bordered table-hover table-striped" style="margin-top: 50px;">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model=>model.NomComplet)</th>
                <th>@Html.DisplayName("Nombre d'absance")</th>
                <th>@Html.DisplayName("Taux d'absance")</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                <td>
                   @Html.DisplayFor(modelItem => item.NomComplet)
                </td> 
                    <td>
                    @Html.DisplayFor(modelItem => item.NbAbsEtu)
                </td> 
                   <td>
                    @Html.DisplayFor(modelItem => item.Countabs) %
                </td> 
           
            </tr>
        }
    
     
        </tbody>
    </table>
</div>
