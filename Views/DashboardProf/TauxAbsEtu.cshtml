@model IEnumerable<MiniProjet_alpha.ViewModels.AdminDashboardViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class=" border rounded border-success bg-primary">
        <h1 class="display-4">Taux d'absence par étudiant dans votre matière</h1>
    </div>

    <div class="container" style="margin-top: 50px;">
           <a asp-action="ListePresence" class="btn btn-primary">Liste de presence</a> |
                <a asp-action="TauxAbsMat" class="btn btn-primary">Taux d'absence dans votre matière</a>
   </div>

    <table class="table table-bordered table-hover table-striped" style="margin-top: 50px;">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model=>model.NomComplet)</th>
                <th>@Html.DisplayName("Nombre des absences")</th>
                <th>@Html.DisplayName("Taux d'absence")</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                <td>
                   @Html.DisplayFor(modelItem => item.NomComplet)
                </td> 
                    <td>
                    @Html.DisplayFor(modelItem => item.NbAbsEtu)
                </td> 
                   <td>
                    @Html.DisplayFor(modelItem => item.Countabs) %
                </td> 
                 
            </tr>
        }
        </tbody>
    </table>
</div>
