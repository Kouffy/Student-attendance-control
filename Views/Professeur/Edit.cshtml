@model MiniProjet_alpha.ViewModels.ProfesseurViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Modifier</h1>

<h4>Gestion des professeurs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="Professeur.IdProfesseur" />
            <div class="form-group">
                <label asp-for="Professeur.Nom" class="control-label"></label>
                <input asp-for="Professeur.Nom" class="form-control" />
                <span asp-validation-for="Professeur.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professeur.Prenom" class="control-label"></label>
                <input asp-for="Professeur.Prenom" class="form-control" />
                <span asp-validation-for="Professeur.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professeur.Matericule" class="control-label"></label>
                <input asp-for="Professeur.Matericule" class="form-control" />
                <span asp-validation-for="Professeur.Matericule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professeur.Dateembauche" class="control-label"></label>
                <input asp-for="Professeur.Dateembauche" class="form-control" />
                <span asp-validation-for="Professeur.Dateembauche" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Professeur.MatiereId" class="control-label"></label>
                <select asp-for="Professeur.MatiereId"  class="form-control">
                    @foreach (var item in Model.Matieres)
                    {
                        <option value="@item.IdMatiere">@item.Libelle</option>
                    }
                </select>
                <span asp-validation-for="Professeur.MatiereId" class="text-danger"></span>
            </div>
              
                <input asp-for="Professeur.UtilisateurId" class="form-control" hidden />
    
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Retourner vers la liste principale</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
