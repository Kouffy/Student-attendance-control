@model MiniProjet_alpha.ViewModels.ClasseViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modifier</h1>

<h4>Gestion des classes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="classe.IdClasse" />
            <div class="form-group">
                <label asp-for="classe.Libelle" class="control-label"></label>
                <input asp-for="classe.Libelle" class="form-control" />
                <span asp-validation-for="classe.Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="classe.FiliereIdFiliere" class="control-label"></label>
                <select asp-for="classe.FiliereIdFiliere"  class="form-control">
                    @foreach (var item in Model.Filieres)
                    {
                        <option value="@item.IdFiliere">@item.Libelle</option>
                    }
                </select>
                <span asp-validation-for="classe.FiliereIdFiliere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Retourner vers la liste principale</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
